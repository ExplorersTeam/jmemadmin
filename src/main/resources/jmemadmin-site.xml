<configuration>
	<!-- ZooKeeper Configuration Items -->
	<property>
		<name>jmemadmin.zookeeper.quorum</name>
		<value>dfs1a1.ecld.com:2181,dfs1m1.ecld.com:2181,dfs1m2.ecld.com:2181</value>
	</property>
	<property>
		<name>jmemadmin.zookeeper.znode.root</name>
		<value>/memcached</value>
	</property>
	<property>
		<name>jmemadmin.zookeeper.connection.timeout.ms</name>
		<value>30000</value>
	</property>
	<property>
		<name>jmemadmin.zookeeper.session.timeout.ms</name>
		<value>60000</value>
	</property>
	<property>
		<name>jmemadmin.zookeeper.retry.exponential-back-off.sleep-time.base.ms</name>
		<value>1000</value>
	</property>
	<property>
		<name>jmemadmin.zookeeper.retries.max</name>
		<value>3</value>
	</property>
	<property>
		<name>jmemadmin.zookeeper.retry.exponential-back-off.sleep-time.max.ms</name>
		<value>2000</value>
	</property>

	<!-- Monitor Service Configuration Items -->
	<property>
		<name>jmemadmin.mc.history.lifetime</name>
		<value>5</value>
	</property>
	<property>
		<name>jmemadmin.monitor.mc.status.interval.ms</name>
		<value>10000</value>
	</property>
	<property>
		<name>jmemadmin.mc.instance.prefix</name>
		<value>mc</value>
	</property>
	<property>
		<name>jmemadmin.mc.instance.suffix</name>
		<value>.pid</value>
	</property>
	<property>
		<name>jmemadmin.mc.instance.pid.dir</name>
		<value>/tmp/</value>
	</property>


	<!-- Memcached startup command configurations -->
	<property>
		<name>jmemadmin.mc.startup.shell.path</name>
		<value>/opt/memcached/1.5.9/memcached-1.5.9/memcached</value>
	</property>
	<property>
		<name>jmemadmin.mc.startup.user</name>
		<value>root</value>
	</property>
	<property>
		<name>jmemadmin.mc.startup.max.simultaneous.connections</name>
		<value>1024</value>
	</property>
	<property>
		<name>jmemadmin.mc.startup.configurable.parameters</name>
		<value> -d -u root -c 1000 </value>
	</property>


	<!-- RESTful Service Configuration Items -->
	<property>
		<name>jmemadmin.rest.server.port</name>
		<value>8725</value>
	</property>
	<property>
		<name>jmemadmin.rest.agent.port</name>
		<value>8726</value>
	</property>
	
	<!-- SockIOPool Configuration Items -->
	<property>
		<name>jmemadmin.sockiopool.failover</name>
		<value>true</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.init.connections</name>
		<value>10</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.min.connections</name>
		<value>5</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.max.connections</name>
		<value>250</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.maint.sleep</name>
		<value>30</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.nagle</name>
		<value>false</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.socket.timeout</name>
		<value>3000</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.alive.check</name>
		<value>true</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.max.idle</name>
		<value>1000*30*30</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.connect.timeout</name>
		<value>0</value>
	</property>
	
	<property>
		<name>jmemadmin.sockiopool.memname.prefix</name>
		<value>mem</value>
	</property>
	<property>
		<name>jmemadmin.sockiopool.garbage.collection.interval.ms</name>
		<value>1000000</value>
	</property>
</configuration>